<h2 class="ic-db">Blog Posts</h2>
<div class="pad-lr">
	<%= jqgrid("Site Blog Posts", "blog_posts", "/admin/blog_posts",
		[
			{ :field => "id", :label => "ID", :width => 35, :resizable => false, :align => 'center' },
			{ :field => "user_id", :label => "User", :width => 35, :editable => true, :align=>'center' },
			{ :field => "title", :label => "Title", :width => 200, :editable => true },
			{ :field => "parent_id", :label => "Parent ID", :width => 75, :align => 'center' },
			{ :field => "published", :label => "Published", :width => 80, 
					:editable => true, :edittype => "checkbox", :editoptions => {:value => "10" }, 
					:align => 'center' },	
			{ :field => "featured", :label => "Featured", :width => 80, 
					:editable => true, :edittype => "checkbox", :editoptions => {:value => "10" }, 
					:align => 'center' }	
		],
		{ :height => 300, :rows_per_page => 30, :add => true, 
   		  :edit => true, :inline_edit => false, 
		  :delete => true, :edit_url => "/admin/post_blog_post_data" }
	)%>
</div>